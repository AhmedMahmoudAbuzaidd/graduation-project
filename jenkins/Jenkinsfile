pipeline {
    agent master

    tools {
        sonarQube 'SonarQube Scanner'
    }
    environment {
        scannerHome = tool 'SonarQube Scanner'
    }

    stages {
        stage('Checkout SCM') {
            steps {
                git branch: 'main', url: 'https://github.com/AhmedMahmoudAbuzaidd/graduation-project.git'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('SonarQube Scanner') {
                    sh '''${scannerHome}/bin/sonar-scanner -Dsonar.projectName=dotnet \
                    -Dsonar.sources=. \
                    -Dsonar.projectkey=dotnet '''
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build . -t engahmedabuzaid/dotnet:V1'
            }
        }
    }

    post {
        success {
            echo 'Pipeline success!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
